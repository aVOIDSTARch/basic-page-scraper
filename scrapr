#!/usr/bin/env bash
# Launcher for the scraper: supports `install` and `clean` subcommands
set -euo pipefail
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

case "${1-}" in
	install)
		shift || true
		exec bash "$SCRIPT_DIR/scripts/install.sh" "$@"
		;;
	clean)
		shift || true
		exec bash "$SCRIPT_DIR/scripts/clean.sh" "$@"
		;;
	*)
		exec bun "$SCRIPT_DIR/scraper/cli.ts" "$@"
		;;
esac
